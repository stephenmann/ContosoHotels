<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>@ViewData["Title"] - Contoso Hotels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/ContosoHotels.jpeg" alt="Contoso Hotels Logo" />
                    Contoso Hotels
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>                <div class="collapse navbar-collapse" id="navbarNav"><ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Rooms" asp-action="Index">Search Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Bookings" asp-action="Search">My Bookings</a>
                        </li>                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="staffDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-tie me-1"></i>Staff
                            </a>
                            <div class="dropdown-menu" aria-labelledby="staffDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Manager" asp-action="Index">
                                    <i class="fas fa-chart-line me-1"></i>Manager Dashboard
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Housekeeping" asp-action="Index">
                                    <i class="fas fa-broom me-1"></i>Housekeeping Requests
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="RoomService" asp-action="Index">
                                    <i class="fas fa-utensils me-1"></i>Room Service Orders
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Contoso Hotels</h5>
                    <p>Experience luxury and comfort at our world-class hotel chain.</p>
                </div>
                <div class="col-md-3">                    <h6>Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Rooms" asp-action="Index" class="text-light">Search Rooms</a></li>
                        <li><a asp-controller="Bookings" asp-action="Search" class="text-light">My Bookings</a></li>
                        <li><a asp-controller="Manager" asp-action="Index" class="text-light">Manager Dashboard</a></li>
                        <li><a asp-controller="Housekeeping" asp-action="Index" class="text-light">Housekeeping</a></li>
                        <li><a asp-controller="RoomService" asp-action="Index" class="text-light">Room Service</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Contact</h6>
                    <p class="mb-0">Phone: 1-800-CONTOSO</p>
                    <p class="mb-0">Email: info@contosohotels.com</p>
                </div>
            </div>
            <hr class="bg-light">
            <div class="text-center">
                <small>&copy; 2025 Contoso Hotels. All rights reserved.</small>
            </div>
        </div>    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
